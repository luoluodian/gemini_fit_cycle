<view class="tab-bar">
  <view class="tab-bar-container">
    <view wx:for="{{list}}" wx:key="index" class="tab-item {{selected === index ? 'tab-item-active' : ''}}" data-path="{{item.pagePath}}" data-index="{{index}}" bindtap="switchTab">
      <view class="tab-icon-emoji">{{item.icon}}</view>
      <text class="tab-text" style="color: {{selected === index ? selectedColor : color}}">{{item.text}}</text>
      <view wx:if="{{selected === index}}" class="active-dot"></view>
    </view>
  </view>
</view>
