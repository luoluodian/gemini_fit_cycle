.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  /* 移除固定 height，改用内容撑开 + padding */
  background: rgba(255, 255, 255, 0.88);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  padding-bottom: env(safe-area-inset-bottom);
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  box-shadow: 0 -10rpx 40rpx rgba(0, 0, 0, 0.05);
  z-index: 9999;
}

.tab-bar-container {
  display: flex;
  height: 100rpx; /* 固定的内容区高度 */
  width: 100%;
  align-items: center;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: all 0.2s ease;
}

.tab-icon-emoji {
  font-size: 36rpx;
  line-height: 1;
  margin-bottom: 2rpx;
}

.tab-item-active {
  transform: translateY(-2rpx);
}

.tab-text {
  font-size: 20rpx;
  font-weight: 600;
  line-height: 1.2;
}

.active-dot {
  position: absolute;
  bottom: 6rpx;
  width: 6rpx;
  height: 6rpx;
  background-color: #10b981;
  border-radius: 50%;
  box-shadow: 0 0 10rpx rgba(16, 185, 129, 0.3);
}