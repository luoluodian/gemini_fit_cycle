{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": false,  // 暂时关闭，分阶段修复后再启用
    "strictBindCallApply": true,  // 已启用，确保 bind/call/apply 的类型安全
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      // TS5090 leading './'
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
}
