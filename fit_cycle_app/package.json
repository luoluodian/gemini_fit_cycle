    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "axios": "^1.12.2",
    "build": "^0.1.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cls-hooked": "^4.2.2",
    "ioredis": "^5.8.2",
    "mysql2": "^3.15.3",
    "nest-winston": "^1.10.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
